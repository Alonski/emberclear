<div style='width: 100%; height: 200px; overflow: hidden'>
  <video id='qr-preview' class='w-100' autoplay='autoplay'></video>
</div>

<span class='flex justify-content-space-between'>
  {{#each cameras as |camera|}}
    <button
      class='button {{if (eq camera activeCamera) "is-disabled"}}'
      {{action 'selectCamera' camera}}>
      {{camera.name}}
    </button>
  {{/each}}
</span>
