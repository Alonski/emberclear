<div class='message-list flex-row no-overflow'>

  {{#vertical-collection @messages
    tagName='div'
    class='messages flex-grow justify-content-end overflows'
    estimateHeight=100
    staticHeight=false
    bufferSize=3
    renderAll=false
    renderFromLast=true
     as |message index|}}

     <Message @message={{message}} />

  {{/vertical-collection}}

</div>
