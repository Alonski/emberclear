<div class='message-list'>

  {{#vertical-collection chatMessages
    tagName='div'
    class='messages default-transition'
    estimateHeight=100
    staticHeight=false
    bufferSize=3
    renderAll=false
    renderFromLast=true
     as |message index|}}

     <Message
       @message={{message}}
       @hideHeader={{should-hide-header messages message index}} />

  {{/vertical-collection}}

</div>
