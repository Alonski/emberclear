<div class='message m-l-md m-r-md m-b-md'>

  <div class='message-header'>
    <span class='from'>
      {{#if hasSender}}

        {{#link-to 'chat.privately-with' @message.from}}
          {{senderName}}
        {{/link-to}}

      {{else}}
        <em>removed</em>
      {{/if}}
    </span>

    <span class='sentAt has-hover-tip'>
      {{format-date @message.sentAt}}

      <HoverTip>
        Received: {{format-date @message.receivedAt}}
      </HoverTip>
    </span>
  </div>

  <p class='message-body'>
    {{{messageBody}}}

    {{#if (is-present urls)}}
      <div class='flex flex-wrap'>
        {{#each urls as |url|}}
          <EmbeddedResource class='flex' @url={{url}} />
        {{/each}}
      </div>
    {{/if}}
  </p>

</div>
