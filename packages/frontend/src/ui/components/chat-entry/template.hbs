<form
  class='chat-entry flex-row field has-addons flex-grow m-b-sm'
  {{action 'sendMessage' on="submit"}}
  >
  <div class='control flex'>
    <Dropdown @up={{true}} @buttonIcon='plus' @buttonClass='h-100'>
      <em class='dropdown-item'>
        New embeddables coming soon.
      </em>

      <hr class="dropdown-divider">

      <a class='dropdown-item flex align-items-center'>
        <span class='icon m-r-sm'>{{fa-icon 'code'}}</span>
        <span>Code or text snippet</span>
      </a>

      <a class='dropdown-item flex align-items-center'>
        <span class='icon m-r-sm'>{{fa-icon 'bed'}}</span>
        <span>Embed from URL</span>
      </a>

      <hr class="dropdown-divider">

      <a class='dropdown-item flex align-items-center'>
        <span class='icon m-r-sm'>{{fa-icon 'desktop'}}</span>
        <span>Send File from Computer</span>
      </a>

      <hr class="dropdown-divider">

      <a class='dropdown-item flex align-items-center'>
        <span class='icon m-r-sm'>{{fa-icon 'video'}}</span>
        <span>Start Video Chat</span>
      </a>
    </Dropdown>
  </div>

  <div class='control flex-grow'>
    {{textarea
      autofocus
      class='input'
      value=text
      placeholder=placeholder
    }}
  </div>

  <div class='control flex-column'>
    <input class='button flex-grow' type='submit' value='Send' {{action 'sendMessage'}} />
  </div>
</form>
