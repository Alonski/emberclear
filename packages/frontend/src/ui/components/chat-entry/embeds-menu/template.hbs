<Dropdown @up={{true}} @buttonIcon='plus' @buttonClass='h-100' as |closeMenu|>

  <ModalStatic @name='code-or-snippet' as |_isActive toggle|>
    <a class='dropdown-item flex align-items-center' {{action (queue (action toggle) closeMenu)}}>
      <span class='icon m-r-sm'>{{fa-icon 'code'}}</span>
      <span>Code or text snippet</span>
    </a>
  </ModalStatic>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'bed'}}</span>
    <span>Embed from URL</span>
  </a>

  <hr class="dropdown-divider">

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'desktop'}}</span>
    <span>Send File from Computer</span>
  </a>

  <hr class="dropdown-divider">

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'video'}}</span>
    <span>Start Video Chat</span>
  </a>

  <a class='dropdown-item flex align-items-center has-text-grey-light' disabled>
    <span class='icon m-r-sm'>{{fa-icon 'phone'}}</span>
    <span>Start Audio Chat</span>
  </a>
</Dropdown>

<ModalStatic @name='code-or-snippet' as |isActive toggle|>
  <Snippet @isActive={{isActive}} @close={{action toggle}} @sendTo={{@sendTo}} />
</ModalStatic>
