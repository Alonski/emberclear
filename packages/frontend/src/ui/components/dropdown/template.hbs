<div class="dropdown-trigger">
  <a class="button {{@buttonClass}}" {{action toggleMenu}}>
    {{#if hasButtonText}}
      <span>{{@buttonText}}</span>
    {{/if}}

    {{#if hasButtonIcon}}
      <span class="icon is-small">
        {{fa-icon @buttonIcon}}
      </span>
    {{/if}}
  </a>
</div>

{{#if isOpen}}
  <div class='no-select full-overlay invisible' {{action toggleMenu}} ></div>
{{/if}}

<div class="dropdown-menu">
  <div class="dropdown-content">
    {{yield}}
  </div>
</div>
