<div class="modal {{if @isActive 'is-active'}}">
  <div
    {{action @close on='click'}}
    class="modal-background">
  </div>

  <div class="modal-content">
    <div class='box'>
      {{yield}}
    </div>
  </div>

  <button
    {{action @close}}
    class="modal-close is-large"
    aria-label="close">
  </button>
</div>
