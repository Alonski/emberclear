<aside class='
  menu
  is-inverted
  flex-grow
  p-sm is-size-6
  is-hidden-mobile'>
  <p class='menu-label m-t-sm m-b-sm'>
    Contacts
  </p>
  <ul class='menu-list'>
    {{#each @contacts as |contact|}}
      <li>
        {{#link-to 'chat.privately-with' contact.id
          activeClass='is-active'
          class='flex-row align-items-center'
        }}
          <StatusIcon @contact={{contact}} />
          <span class='m-l-sm'>{{contact.name}}</span>
        {{/link-to}}
      </li>
    {{/each}}

    {{#if (eq @contacts.length 0)}}
      You have no contacts.
      TODO: add invite / add buttons
    {{/if}}
  </ul>

  <p class='menu-label m-t-sm m-b-sm'>
    Channels
  </p>
  <ul class='menu-list'>
    <li>
      {{#link-to 'chat'}}
        # Public
      {{/link-to}}
    </li>
  </ul>
</aside>
