<aside class='
  menu has-background-white
  is-inverted flex-grow
  p-sm is-size-6
  flex-column justify-content-space-between
  '>
  <div>
    <div class='is-hidden-desktop'>
      <TopMobileSection />
    </div>

    <Contacts
      @contacts={{contacts}}
      @closeSidebar={{action closeSidebar}}
      @toggleModal={{action toggleModal}} />

    <Channels
      @channels={{@channels}}
      @closeSidebar={{action closeSidebar}} />

  </div>

  {{#if isLoggedIn}}
    <div class='align-self-end'>
      <hr class='divider m-b-sm' />

      <a class='navbar-item flex-row align-items-center'
        {{action (queue
          (action closeSidebar)
          (transition-to 'logout')
        )}}>
        <span class='icon'>{{fa-icon 'sign-out-alt' prefix='fas'}}</span>
        <span>{{t 'routes.logout'}}</span>
      </a>
    </div>
  {{/if}}
</aside>
