{{#if isLoggedIn}}
  <span class='is-size-4'>{{name}}</span>

  <ul class='menu-list m-b-md'>
    <li>
      <a class=''
        {{action (queue
          (action closeSidebar)
          (transition-to 'contacts')
        )}}>
        <span class='icon'>{{fa-icon 'address-book' prefix='fas'}}</span>
        <span>{{t 'routes.contacts'}}</span>
      </a>
    </li>

    <li>
      <a class=''
        {{action (queue
          (action closeSidebar)
          (transition-to 'settings')
        )}}>
        <span class='icon'>{{fa-icon 'sliders-h'}}</span>
        <span>{{t 'routes.settings'}}</span>
      </a>
    </li>

  </ul>

  <div class='w-100 flex justify-content-space-between'>
    <a
      class='button m-r-md'
      {{action (queue
        (action closeSidebar)
        (action toggleModal 'add-friend')
      )}}>
      Add Friend
    </a>
    <a
      class='button'
      {{action (queue
        (action closeSidebar)
        (action toggleModal 'show-my-info')
      )}}>
      Invite
    </a>
  </div>

  <hr class='divider' />
{{/if}}
