<KeyboardPress @key="ctrl+Space" @onPress={{action toggleSidebar}} />

<div class='is-flex-desktop flex-grow m-none m-b-none no-overflow'>
  {{#if isLoggedIn}}
    <div class='
      sidebar-container flex-row transition-all is-fullheight
      align-items-stretch
      {{if sidebar.isShown
        "is-sidebar-visible"
        "is-sidebar-hidden"}}'>

      <div class='sidebar-buttons'>
        <HamburgerButton
          @class='
            is-hidden-mobile
            is-flex-desktop'
          @onClick={{action toggleSidebar}}
          @isActive={{sidebar.isShown}} />
      </div>

      <div class='no-select sidebar-underlay full-overlay' {{action toggleSidebar}}></div>
      <Sidebar class='sidebar-wrapper' @contacts={{@contacts}} @channels={{@channels}} />

      <HamburgerButton
        @class='offcanvas-trigger is-flex-tablet-only'
        @onClick={{action toggleSidebar}}
        @isActive={{sidebar.isShown}} />
    </div>
  {{/if}}


  <div class='
    flex-column flex-grow
    is-fullheight overflows
    {{if sidebar.isShown
      "is-sidebar-visible"
      "is-sidebar-hidden"}}'>

    {{yield}}

  </div>
</div>
