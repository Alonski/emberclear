<div class='navbar has-shadow {{if isChat "has-background-primary"}}'>
    <div class='container'>
        <div class='navbar-brand'>
            {{#link-to 'application' class='navbar-item {{textColor}}'}}
              {{t 'appname'}}
            {{/link-to}}
            <a
              role='button'
              class="navbar-burger burger {{touchMenuClasses}}"
              aria-label="menu" aria-expanded="false"
              {{action 'toggleTouchMenu'}}>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        <div class="navbar-menu {{touchMenuClasses}}">
            <div class="navbar-end">
                {{#link-to 'chat' class='navbar-item {{if isChat "has-text-white"}}'}}
                    {{t 'routes.chat'}}
                {{/link-to}}

                {{#if hasName}}
                  {{#link-to 'settings' class='navbar-item {{if isChat "has-text-white"}}'}}
                      <span class='icon'>
                          <i class='fas fa-user-circle'></i>
                      </span>
                      {{!-- {{t 'routes.profile'}} --}}
                      {{name}}
                  {{/link-to}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
