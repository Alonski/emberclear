<div class='navbar is-fixed-top has-shadow {{if isChat "is-primary"}}'>
  <div class='navbar-brand'>

    {{#if isLoggedIn}}
      <div class='is-hidden-desktop'>
        <HamburgerButton
          @class='flex'
          @onClick={{action toggleSidebar}}
          @isActive={{sidebar.isShown}} />
      </div>
    {{/if}}

    {{#link-to 'application' class=(concat 'navbar-item ' (if isChat textColor))}}
      {{t 'appname'}}
    {{/link-to}}

    <CurrentChatName class='navbar-item' as |isVisible name|>
      {{#if isVisible}}
        <span class='chat-name'>
          {{name}}
        </span>
      {{/if}}
    </CurrentChatName>
  </div>


  <div class="navbar-end is-hidden-touch">
    {{#if isLoggedIn}}
      <a class='navbar-item' {{action (transition-to 'chat')}}>
        {{t 'routes.chat'}}
      </a>

      <UserDropMenu class='navbar-item has-dropdown' />
    {{else}}
      <a class='navbar-item' {{action (transition-to 'login')}}>
        {{t 'routes.login'}}
      </a>

      <a class='navbar-item' {{action (transition-to 'setup')}}>
        {{t 'routes.createNewUser'}}
      </a>
    {{/if}}
  </div>
</div>
