<div class='navbar is-fixed-top has-shadow {{if isChat "is-primary"}}'>
  <div class='container'>
    <div class='navbar-brand'>
      {{#link-to 'application' class=(concat 'navbar-item ' (if isChat textColor))}}
        {{t 'appname'}}
      {{/link-to}}
      <a
        role='button'
        class="navbar-burger burger {{touchMenuClasses}}"
        aria-label="menu" aria-expanded="false"
        {{action 'toggleTouchMenu'}}>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
      </a>
    </div>

    <div class="navbar-menu {{touchMenuClasses}}">
      <div class="navbar-end">

        {{#if isLoggedIn}}
          <a class='navbar-item'
            {{action (queue
              (action toggleTouchMenu)
              (transition-to 'chat')
            )}}>
            {{t 'routes.chat'}}
          </a>

          <UserDropMenu
            class='navbar-item has-dropdown'
            @onClose={{action toggleTouchMenu}}
            />

        {{else}}
          <a class='navbar-item'
            {{action (queue
              (action toggleTouchMenu)
              (transition-to 'setup')
            )}}>
            {{t 'routes.createNewUser'}}
          </a>
        {{/if}}

      </div>
    </div>
  </div>
</div>
