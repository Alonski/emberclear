<Modal @isActive={{@isActive}} @close={{action @close}}>
  <h3 class='title-is-3'>This is your public identity</h3>
  Send this to a friend so that they can communicate with you.
  <br  />

  <div class='
    flex-column-mobile flex-row-tablet
    align-items-stretch'>

    <div class='flex justify-content-center' style='min-width: 180px; min-height: 180px;'>
      {{#if qrCode.isPending}}
        <div style='width: 180px; height: 180px;' class='loader'></div>
      {{else}}
        <img
          style='width: 180px; height: 180px;'
          src={{qrCode.content}} />
      {{/if}}
    </div>

    <div class='flex-column flex-grow mw-0'>
      <pre class='overflow contain'><code id='my-identity'>{{identityJson}}</code></pre>

      <div class='flex-row justify-content-end m-t-md'>
        <CopyButton
          class='button has-status-tip {{if copied "is-active"}}'
          @success={{action 'copySuccess'}}
          @clipboardTarget='#my-identity'>
          Copy

          <HoverTip @animationClasses='floats-up'>Copied!</HoverTip>
        </CopyButton>
      </div>
    </div>

  </div>
</Modal>
