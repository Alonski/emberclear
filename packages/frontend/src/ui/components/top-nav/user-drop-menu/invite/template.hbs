<ModalContainer as |container|>
  <a
    class='button {{@linkClass}}'
    {{action (queue container.toggle @afterClick)}}>Invite</a>

  {{to-elsewhere
    named='modals'
    send=(component 'invite-modal'
      isActive=container.isActive
      close=(action (mut container.isActive) false)
    )
  }}
</ModalContainer>
