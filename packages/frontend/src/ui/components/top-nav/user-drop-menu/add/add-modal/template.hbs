<Modal @isActive={{@isActive}} @close={{action @close}}>


  {{#if scanning}}
    <QRScanner
      @onScan={{action 'onScan'}}
      @onError={{action 'onScanError'}}
      @onCancel={{action 'toggleScanning'}}
      />
  {{/if}}

  {{#unless scanning}}
    <h3 class='title-is-3'>Paste or scan your friend's identity</h3>
    <br  />
    <div >
      <form
        {{action 'importIdentity' on='submit'}}
        class='flex-column align-items-stretch'>

        {{textarea
          data-test-identity-textarea
          id='identity-textarea'
          class='p-md m-b-md flex-grow has-resize-disabled'
          rows='4'
          value=identityToImport
          onChange=(action (mut identityToImport))
          placeholder=placeholder
        }}

        <div class='flex justify-content-end'>
          <div class='field is-grouped'>
            <p class='control'>
              <button class='button is-primary' {{action 'toggleScanning'}}>
                <span class='icon'>{{fa-icon 'qrcode' prefix='fas'}}</span>
                <span>Scan</span>
              </button>
            </p>

            <p class='control'>
              <button class='button' type='submit' value='Import'>
                Import
              </button>
            </p>

            {{!-- <p class='control'>
              <button class='button' {{action paste}}>
                Paste
              </button>
            </p> --}}

          </div>
        </div>
      </form>
    </div>
  {{/unless}}
</Modal>
