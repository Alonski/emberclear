<ModalContainer as |container|>
  <a
    class={{@linkClass}}
    {{action (queue container.toggle @afterClick)}}>Add Friend</a>

  {{to-elsewhere
    named='modals'
    send=(component 'add-modal'
      isActive=container.isActive
      close=(action (mut container.isActive) false)
    )
  }}
</ModalContainer>
