<a class="navbar-link" {{action (mut showDropdown) (not showDropdown)}}>
  <span class='icon'>
    <i class='fas fa-user-circle'></i>
  </span>
  <span>{{name}}</span>
</a>

<div class="navbar-dropdown">
  {{#link-to 'contacts' class='navbar-item'}}
    <span class='icon'><i class="fas fa-address-book"></i></span>
    <span>Contacts</span>
  {{/link-to}}

  {{#link-to 'settings' class='navbar-item'}}
    <span class='icon'><i class="fas fa-sliders-h"></i></span>
    <span>Settings</span>
  {{/link-to}}

  <hr class='navbar-divider' />

  <div class='flex-row navbar-item justify-content-space-between'>
    <Add @afterClick={{action 'closeMenu'}}/>
    <Invite @afterClick={{action 'closeMenu'}}/>
  </div>
</div>
