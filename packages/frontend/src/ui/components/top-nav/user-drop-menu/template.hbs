<a class="navbar-link" style='z-index: 31' {{action (mut showDropdown) (not showDropdown)}}>
  <span class='icon'>{{fa-icon 'user-circle' prefix='fas'}}</span>
  <span>{{name}}</span>
</a>

<div class="navbar-dropdown dropdown-right transition-all" style='z-index: 31'>
  <a class='navbar-item'
    {{action (queue
      (action closeMenu)
      (transition-to 'contacts')
    )}}>
    <span class='icon'>{{fa-icon 'address-book' prefix='fas'}}</span>
    <span>{{t 'routes.contacts'}}</span>
  </a>

  <a class='navbar-item'
    {{action (queue
      (action closeMenu)
      (transition-to 'settings')
    )}}>
    <span class='icon'>{{fa-icon 'sliders-h' prefix='fas'}}</span>
    <span>{{t 'routes.settings'}}</span>
  </a>

  <hr class='navbar-divider' />

  <div class='flex-row navbar-item justify-content-space-between'>
    <a class='button m-r-md'
      {{action (queue
        (action closeMenu)
        (action toggleModal 'add-friend')
      )}}>
      Add Friend
    </a>
    <a
      class='button'
      {{action (queue
        (action closeMenu)
        (action toggleModal 'show-my-info')
      )}}>
      Invite
    </a>
  </div>

  <hr class='navbar-divider' />

  <a
    class='navbar-item'
    {{action (queue
      (action closeMenu)
      (transition-to 'logout')
    )}}>
    <span class='icon'>{{fa-icon 'sign-out-alt' prefix='fas'}}</span>
    <span>{{t 'routes.logout'}}</span>
  </a>
</div>

<div class='full-overlay {{if showDropdown "is-active"}}' style='z-index: 30' {{action closeMenu}} />
