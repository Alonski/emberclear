<form data-test-name-form {{action createIdentity on='submit'}}>

  <div class="content">
    {{input
      data-test-name-field
      class='input is-large'
      type='text'
      placeholder=(t 'ui.setup.nameLabel')
      value=name
    }}
  </div>

  {{#link-to 'login'}}
    Login instead
  {{/link-to}}

  <input
    data-test-next
    type='submit'
    class='button is-pulled-right'
    disabled={{nameIsBlank}}
    value={{t 'buttons.next'}}
    {{action createIdentity}} />

</form>
