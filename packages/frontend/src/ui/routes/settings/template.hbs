<div class='section'>
  <div class='container'>
    <h1 class='title'>Settings</h1>
    <div class='content'>

      <form {{action 'save' on='submit'}}>

        <Field @label='Name'>
          {{input class='input' value=name}}
        </Field>

        <div class='flex justify-content-end'>
          <input class='button' type='submit' value='Save' />
        </div>
      </form>

      <button class='button' {{action (mut showPrivateKey) (not showPrivateKey)}}>
        {{if showPrivateKey 'Hide' 'Show'}} private key
      </button>

      {{#if showPrivateKey}}
        <MnemonicDisplay @privateKey={{identity.privateKey}} />
      {{/if}}

      <a {{action downloadSettings}} class='button'>
        Download Settings
      </a>

      <hr />

      <h2 class='is-size-4'>Danger Zone</h2>

      <button
        disabled={{messagesDeleted}}
        class='button is-danger is-outlined'
        {{action 'deleteMessages'}}>

        <span class='icon is-small'>
          {{fa-icon 'times'}}
        </span>
        <span>Delete Messages</span>
      </button>
    </div>
  </div>

</div>
