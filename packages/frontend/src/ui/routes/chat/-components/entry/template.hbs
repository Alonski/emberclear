<form
  class='chat-entry flex-row field has-addons flex-grow m-b-sm'
  {{action 'send' on="submit"}}
  >
  <div class='control'>
    <button class='button'>Upload</button>
  </div>

  <div class='control flex-grow'>
    {{input
      class='input'
      value=text
    }}
  </div>

  <div class='control'>
    <input class='button' type='submit' value='Send' {{action 'send'}} />
  </div>
</form>
