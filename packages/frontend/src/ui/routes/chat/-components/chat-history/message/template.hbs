<div class='message m-l-md m-r-md m-b-md'>

  <div class='message-header'>
    <span class='from'>{{@message.from}}</span>
    <span class='sentAt has-hover-tip'>
      {{format-date @message.sentAt}}

      <HoverTip>
        Received: {{format-date @message.receivedAt}}
      </HoverTip>
    </span>
  </div>

  <p class='message-body'>
    {{@message.body}}
    <br />
    {{#each urls as |url|}}
      <video style='max-height: 200px' preload='auto' muted autoplay loop>
        <source src={{url}} type='video/mp4' />
      </video>
    {{/each}}
  </p>

</div>
