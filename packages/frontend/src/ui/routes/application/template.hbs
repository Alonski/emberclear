<TopNav id='emberclear-topnav'/>

<ServiceWorkerUpdateNotify>
  <a class="service-worker-update-notify notification is-info" href="">
    A new version is available, click here to update.
  </a>
</ServiceWorkerUpdateNotify>

<div class='flex-row flex-grow m-none m-b-none'>
  {{#if identity.isLoggedIn}}
    <div class='
      sidebar-container flex-row transition-all
      align-items-stretch
      {{if sidebar.isShown
        "is-sidebar-visible"
        "is-sidebar-hidden"}}'>
      <Sidebar class='flex' @contacts={{model.contacts}} />

      <HamburgerButton
        @class='
          fixed-to-side-for-sidebar
          is-hidden-touch
          is-flex-desktop'
        @onClick={{action toggleSidebar}}
        @isActive={{sidebar.isShown}} />
    </div>

  {{/if}}


  <div class='flex-column flex-grow'>
    {{outlet}}
  </div>
</div>

{{multiple-from-elsewhere name='modals'}}
