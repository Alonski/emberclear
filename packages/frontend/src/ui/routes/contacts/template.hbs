<div class='container'>
  <h1 class='title m-t-md'>Contacts ({{model.length}})</h1>
  <div class='content'>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Public Key</th>
        </tr>
      </thead>
      <tbody>

        {{#each model as |identity|}}
          <tr>
            <td>
              <a {{action 'remove' identity}}>Remove</a>
            </td>
            <td>
              {{identity.name}}
            </td>
            <td>
              {{identity.publicKeyAsHex}}
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>
