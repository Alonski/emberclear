<div class='container'>
  <h1 class='title m-t-md'>
    {{t 'ui.contacts.title' number=model.length}}
  </h1>
  <div class='content'>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>{{t 'models.identity.name'}}</th>
          <th>{{t 'models.identity.publicKey'}}</th>
        </tr>
      </thead>
      <tbody>

        {{#each model as |identity|}}
          <tr>
            <td>
              <a {{action 'remove' identity}}>
                {{t 'buttons.remove'}}
              </a>
            </td>
            <td>
              {{identity.name}}
            </td>
            <td>
              {{identity.publicKeyAsHex}}
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>
