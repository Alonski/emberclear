<div class='message'>
  <div class='message-header'>
    <span class='from'>{{@message.from}}</span>
    <span class='sentAt'>
      {{moment-format @message.sentAt 'lll'}}
      <span class='receivedAt has-background-info'>
        Received: {{moment-format @message.receivedAt 'lll'}}
      </span>
    </span>
  </div>
  <p class='message-body'>
    {{@message.body}}
  </p>
</div>
