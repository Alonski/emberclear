<div class='full-height centered-content'>
  <div class='columns'>
    <div class='column'>

      <h1 class='title'>What would you like to be called?</h1>
      <div class="card">
        <div class="card-content">
          <div class="content">
            <label>This is how others will identify you</label>
            {{input
              class='input is-large'
              type='text'
              value=name}}
          </div>
        </div>
        <footer class="card-footer">
          <div class='card-footer-item'>

            <button
              class='button'
              {{action createIdentity}}>
              Next
            </button>
          </div>
        </footer>
      </div>
    </div>

  </div>
</div>
