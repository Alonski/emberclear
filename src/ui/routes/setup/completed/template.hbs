{{#focus-card title=(t 'ui.setup.almostReady')}}

  <div class='card-content'>
    <div class='content'>
      {{t 'ui.setup.mnemonicPrompt'}}

      <div class='has-background-white p-md m-lg with-border'>
        <div class='level-item is-size-6'>{{mnemonic}}</div>
      </div>

      {{t 'ui.setup.note'}}
    </div>
  </div>

  <footer class="card-footer">
    <div class='card-footer-item'>
      <button
        class='button'
        {{action (transition-to 'setup.index')}}>
        {{t 'buttons.back'}}
      </button>

      <button
        class='button'
        {{action (transition-to 'chat')}}>
        {{t 'buttons.next'}}
      </button>
    </div>
  </footer>

{{/focus-card}}
